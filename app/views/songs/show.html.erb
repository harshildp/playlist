<div class='container'>
    <a href='<%= songs_path %>' role='button' class='btn btn-success'>All Songs</a>
    <a href='<%= logout_path %>' role='button' class='btn btn-danger' data-method='delete'>Logout</a>
    <div class='row col-12'>
        <h3>Other users that have added <%= @song.title %> by <%= @song.artist %>:</h3>    
        <div class='table-responsive'>
        <table class="table table-striped table-hover auto-c">
            <thead>
                <tr>
                    <th>Name</th>
                    <th># of Adds</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |u| %>
                <% unless u.id == @user.id %>
                    <tr>
                    <td><%= u.first_name %> <%= u.last_name %></td>
                    <td><%= u.adds.reject{|a| a.song_id != @song.id }.count %></td>
                    </tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>
