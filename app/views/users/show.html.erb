<div class='container'>
    <a href='<%= songs_path %>' role='button' class='btn btn-success'>All Songs</a>
    <a href='<%= logout_path %>' role='button' class='btn btn-danger' data-method='delete'>Logout</a>
    <div class='row col-12'>
        <h3><%= @user.first_name %>'s Playlist:</h3>    
        <div class='table-responsive'>
        <table class="table table-striped table-hover auto-c">
            <thead>
                <tr>
                    <th>Artist</th>
                    <th>Title</th>
                    <th># of Adds</th>
                </tr>
            </thead>
            <tbody>
                <% @songs.each do |s| %>
                    <tr>
                    <td><%= s.artist %></td>
                    <td><%= s.title %></td>
                    <td><%= s.adds.reject{|a| a.user_id != @user.id }.count %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>

